const dns = [
  { name: 'DNS Dumpster', url: 'https://dnsdumpster.com/' },
  { name: 'NS Lookup', url: 'https://dnschecker.org/ns-lookup.php' },
];

const whois = [
  { name: 'IQ WhoIS', url: 'https://iqwhois.com/advanced-search' },
  { name: 'Whois', url: 'https://www.apnic.net/static/whowas-ui/' },
  { name: 'WHOIS History (domain)', url: 'https://osint.sh/whoishistory/' },
  { name: 'DNS History', url: 'https://completedns.com/dns-history/', desc: 'Completed DNS History' },
