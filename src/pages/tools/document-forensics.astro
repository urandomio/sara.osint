  { name: 'MoonSearch', url: 'http://moonsearch.com/analytics/', desc: 'Domains for analytics ID' },
  { name: 'HackerTarget', url: 'https://hackertarget.com/reverse-analytics-search/', desc: 'Reverse Analytics Search' },
  { name: 'SpyOnWeb', url: 'https://spyonweb.com/' },
  { name: 'DNSlytics', url: 'https://dnslytics.com/reverse-analyticsand', desc: 'Reverse Analytics ID' },
  { name: 'Google Analytics ID Explorer', url: 'https://www.osintcombine.com/google-analytics-id-explorer' },
  { name: 'OSINT Hub', url: 'https://osinthub.org/' },
  { name: 'osint.sh/adsense', url: 'https://osint.sh/adsense/' },
  { name: 'osint.sh/analytics', url: 'https://osint.sh/analytics/' },
  { name: 'Analyzeid', url: 'https://analyzeid.com/' },
  { name: 'Similar Websites Search', url: 'https://www.sitelike.org/' },
  { name: 'DomainIQ Reverse Analytics', url: 'https://www.domainiq.com/reverse_analytics' },
