---
import BaseLayout from '../layouts/BaseLayout.astro';

const sections = [
  {
    title: 'Tools',
    description: 'People search, phone lookup, reverse image, dark web search engines, document forensics, and more.',
    href: '/sara.osint/tools/clearnet',
    items: [
      { label: 'Clearnet', href: '/sara.osint/tools/clearnet' },
      { label: 'Darknet', href: '/sara.osint/tools/darknet' },
      { label: 'Document Forensics', href: '/sara.osint/tools/document-forensics' },
      { label: 'Search Engines', href: '/sara.osint/tools/search-engines' },
      { label: 'Social Media', href: '/sara.osint/tools/social-media' },
    ],
  },
  {
    title: 'Resources',
    description: 'Investigative journalism, fact-checking, OSINT professionals, mental health support.',
    href: '/sara.osint/resources/journalism',
    items: [
      { label: 'Journalism', href: '/sara.osint/resources/journalism' },
      { label: 'Fact-Checking', href: '/sara.osint/resources/fact-checking' },
      { label: 'Professionals', href: '/sara.osint/resources/professionals' },
      { label: 'Mental Health', href: '/sara.osint/resources/mental-health' },
      { label: 'OSINT4GOOD', href: '/sara.osint/resources/osint4good' },
    ],
  },
  {
    title: 'Challenges',
    description: 'CTF writeups and geolocation challenges to sharpen your OSINT skills.',
    href: '/sara.osint/challenges',
    items: [
      { label: 'All Challenges', href: '/sara.osint/challenges' },
    ],
  },
  {
    title: 'Blog',
    description: 'Tutorials on reverse phone searching, GitHub email discovery, Tor setup, and more.',
    href: '/sara.osint/blog',
    items: [
      { label: 'All Posts', href: '/sara.osint/blog' },
    ],
  },
];
---

<BaseLayout title="Sara's OSINT Resources">
  <!-- Hero -->
  <section class="mb-16 text-center">
    <h1 class="mb-4 text-4xl font-bold text-zinc-50 sm:text-5xl lg:text-6xl">
      Sara's OSINT Resources
    </h1>
    <p class="mx-auto max-w-2xl text-lg text-zinc-300/80 leading-relaxed">
      Curated open source intelligence tools, techniques, and resources &mdash;
      built for investigators, journalists, and curious minds.
    </p>
  </section>

  <!-- Quick links grid -->
  <div class="grid gap-6 sm:grid-cols-2">
    {sections.map((section) => (
      <div class="surface-card p-6">
        <h2 class="mb-2 text-xl font-bold text-zinc-100">{section.title}</h2>
        <p class="mb-4 text-sm text-zinc-400">{section.description}</p>
        <div class="flex flex-wrap gap-2">
          {section.items.map((item) => (
            <a
              href={item.href}
              class="inline-block rounded-lg border border-white/10 bg-white/5 px-3 py-1.5 text-sm text-cyan-300 transition-colors hover:border-cyan-400/30 hover:bg-white/10 hover:text-cyan-200"
            >
              {item.label}
            </a>
          ))}
        </div>
      </div>
    ))}
  </div>

  <!-- Intro -->
  <section class="mt-16 surface p-6 sm:p-10">
    <p class="text-lg leading-relaxed text-zinc-200/85">
      Greetings &mdash; My name is Sara. I'm on a quest to launch my OSINT career.
      This site is a work in progress &mdash; I will be adding material to it slowly but surely.
      It will be to showcase what I've done and perhaps provide information for others looking to learn.
    </p>
    <p class="mt-4">
      <a href="/sara.osint/about" class="text-cyan-300 underline decoration-cyan-300/40 underline-offset-4 hover:text-cyan-200 transition-colors">
        Learn more about me &rarr;
      </a>
    </p>
  </section>
</BaseLayout>
