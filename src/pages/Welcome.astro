---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;
const dest = base.endsWith('/') ? base : `${base}/`;
---

<head>
  <meta http-equiv="refresh" content={`0; url=${dest}`} />
  <link rel="canonical" href={dest} />
</head>

<BaseLayout title="Welcome - Sara's OSINT Resources">
  <article class="surface p-6 sm:p-10 prose prose-invert max-w-none">
    <h1 class="gradient-text mb-8 text-5xl font-bold">Welcome</h1>
    <p>This page has moved.</p>
    <p>
      <a class="focus-ring rounded-sm text-cyan-300 hover:text-cyan-200" href={dest}>Go to the homepage</a>.
    </p>
  </article>
</BaseLayout>
