---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
---

<BaseLayout title="OSINT Challenges - Sara's OSINT Resources">
  <article class="prose prose-invert prose-violet max-w-none">
    <h1 class="gradient-text mb-8 text-5xl font-bold">OSINT Challenges</h1>

    <div class="space-y-8">
      <section class="rounded-lg border border-slate-700 bg-slate-800/50 p-8 backdrop-blur">
        <h2 class="mb-4 text-3xl font-bold text-violet-400">LinkedIn OSINT CTF (Challenge)</h2>
        <p class="text-lg text-slate-300">
          Check out the <a href="/sara.osint/linkedin-challenge" class="text-violet-400 hover:text-violet-300 underline">#garyosintchallenge HERE</a>
        </p>
      </section>

      <section class="rounded-lg border border-slate-700 bg-slate-800/50 p-8 backdrop-blur">
        <h2 class="mb-4 text-3xl font-bold text-violet-400">#garysosintchallenge #5</h2>
        <p class="text-lg text-slate-300">
          View challenge details <a href="/sara.osint/garysosintchallenge-5" class="text-violet-400 hover:text-violet-300 underline">HERE</a>
        </p>
      </section>

      <section class="rounded-lg border border-slate-700 bg-slate-800/50 p-8 backdrop-blur">
        <h2 class="mb-4 text-3xl font-bold text-violet-400">CTF's</h2>
        <p class="text-lg text-slate-300">
          Capture the Flag challenges to test your OSINT skills! GLHF!
        </p>
        <p class="mt-4 text-lg text-slate-300">
          <a href="/sara.osint/ctfs" class="text-violet-400 hover:text-violet-300 underline">View CTF Resources HERE</a>
        </p>
      </section>
    </div>
  </article>
</BaseLayout>
