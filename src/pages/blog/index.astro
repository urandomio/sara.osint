---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHeader from '../../components/PageHeader.astro';
import BlogCard from '../../components/BlogCard.astro';

const posts = [
  {
    slug: 'reverse-searching-phone-numbers',
    title: 'Reverse Searching Phone Numbers Tip #1',
    date: 'June 2025',
    excerpt: 'Tips and tools for reverse searching phone numbers across multiple platforms.',
  },
  {
    slug: 'expose-github-email',
    title: 'Expose GitHub E-mail Address',
    date: 'June 2025',
    excerpt: 'Step-by-step guide to finding email addresses through GitHub profiles.',
  },
  {
    slug: 'intro-to-tor',
    title: 'Introduction to Tor',
    date: 'February 2025',
    excerpt: 'Getting started with Tor for privacy and dark web investigation.',
  },
];
---

<BaseLayout title="Blog - Sara's OSINT Resources">
  <article class="prose prose-invert max-w-none">
    <PageHeader title="Blog" description="Tutorials, tips, and writeups on OSINT techniques." />

    <div class="not-prose grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {posts.map((post) => (
        <BlogCard
          slug={post.slug}
          title={post.title}
          date={post.date}
          excerpt={post.excerpt}
        />
      ))}
    </div>
  </article>
</BaseLayout>
