---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageHeader from '../components/PageHeader.astro';

const sections = [
  {
    title: 'Tools',
    pages: [
      { label: 'Clearnet', href: '/sara.osint/tools/clearnet' },
      { label: 'Darknet', href: '/sara.osint/tools/darknet' },
      { label: 'Document Forensics', href: '/sara.osint/tools/document-forensics' },
      { label: 'Search Engines', href: '/sara.osint/tools/search-engines' },
      { label: 'Social Media', href: '/sara.osint/tools/social-media' },
    ],
  },
  {
    title: 'Resources',
    pages: [
      { label: 'Investigative Journalism', href: '/sara.osint/resources/journalism' },
      { label: 'Fact-Checking', href: '/sara.osint/resources/fact-checking' },
      { label: 'OSINT Professionals', href: '/sara.osint/resources/professionals' },
      { label: 'Mental Health', href: '/sara.osint/resources/mental-health' },
      { label: 'OSINT4GOOD', href: '/sara.osint/resources/osint4good' },
    ],
  },
  {
    title: 'Challenges',
    pages: [
      { label: 'Challenges Index', href: '/sara.osint/challenges' },
      { label: '#garysosintchallenge 5', href: '/sara.osint/challenges/garys-challenge-5' },
      { label: 'LinkedIn Challenge', href: '/sara.osint/challenges/linkedin-challenge' },
    ],
  },
  {
    title: 'Blog',
    pages: [
      { label: 'Blog Index', href: '/sara.osint/blog' },
      { label: 'Reverse Searching Phone Numbers', href: '/sara.osint/blog/reverse-searching-phone-numbers' },
      { label: 'Expose GitHub E-mail Address', href: '/sara.osint/blog/expose-github-email' },
      { label: 'Introduction to Tor', href: '/sara.osint/blog/intro-to-tor' },
    ],
  },
  {
    title: 'Other',
    pages: [
      { label: 'About', href: '/sara.osint/about' },
    ],
  },
];
---

<BaseLayout title="Site Index - Sara's OSINT Resources" description="Browse all pages on the site">
  <article class="surface p-6 sm:p-10 prose prose-invert max-w-none">
    <PageHeader title="Site Index" description="A complete listing of all pages on this site." />

    <div class="not-prose mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {sections.map((section) => (
        <div class="surface-card p-5">
          <h2 class="text-base font-semibold tracking-wide text-zinc-100">{section.title}</h2>
          <ul class="mt-3 space-y-2 text-sm">
            {section.pages.map((page) => (
              <li>
                <a class="text-cyan-300 hover:text-cyan-200 transition-colors" href={page.href}>
                  {page.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </article>
</BaseLayout>
